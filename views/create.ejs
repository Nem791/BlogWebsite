<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

  <body>

    <%- include('layouts/navbar'); -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="page-heading">
                <h1>New Post</h1>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <!-- for browser to know tha tthe form contains mutli media. will encripy multie media and send to server -->
            <span id="error" hidden><%= errorText %></span>
            <form name="new-form" id="new-form" action="/posts/store" method="POST" enctype="multipart/form-data">
              <!-- Title -->
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Title</label>
                  <input type="text" class="form-control" placeholder="Title" id="title" name="title">
                </div>
                <span hidden class="err-message">Field cannot be empty</span>
              </div>
              <!-- Excerpt = Trich van  -->
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Excerpt</label>
                  <input type="text" class="form-control" placeholder="Excerpt" id="excerpt" name="excerpt">
                </div>
                <span hidden class="err-message">Field cannot be empty</span>
              </div>
              <!-- Content -->
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Content</label>
                  <textarea rows="5" class="form-control" placeholder="Content" id="content" name="content"></textarea>
                </div>
                <span hidden class="err-message">Field cannot be empty</span>
              </div>

              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <div>Category</div>

                  <div class="checkbox-container">
                    <input id="checkbox-array" type="hidden" name="category">

                    <div class="input-group-text">
                      <input id="Technology" type="checkbox" aria-label="Checkbox for following text input"
                        name="technology">
                      <label class="position-initial" for="Technology">Technology</label>
                    </div>

                    <div class="input-group-text">
                      <input id="Economy" type="checkbox" aria-label="Checkbox for following text input"
                        name="economy">
                      <label class="position-initial" for="Economy">Economy</label>
                    </div>

                    <div class="input-group-text">
                      <input id="Game" type="checkbox" aria-label="Checkbox for following text input" name="game">
                      <label class="position-initial" for="Game">Game</label>
                    </div>

                    <div class="input-group-text">
                      <input id="Travel" type="checkbox" aria-label="Checkbox for following text input" name="travel">
                      <label class="position-initial" for="Travel">Travel</label>
                    </div>

                    <div class="input-group-text">
                      <input id="Other" type="checkbox" aria-label="Checkbox for following text input" name="other">
                      <label class="position-initial" for="Other">Other</label>
                    </div>
                  </div>

                </div>
              </div>
              <!-- Image -->
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Image</label>
                  <input type="file" class="form-control" id="image" name="image" accept="image/*">
                </div>
                <span hidden class="err-message">Select image for post</span>
              </div>
              <br>
              <div class="form-group">
                <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
              </div>
            </form>
          </div>
        </div>
      </div> 

      <hr>
      <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
          <%- include('layouts/submit-post'); -%>
          <%- include('layouts/login-script'); -%>

  </body>

</html>